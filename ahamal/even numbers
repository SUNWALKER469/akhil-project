//WAP to print all even numbers from 1 to 100 using for, while and do while loop
#include<stdio.h>

int main() 
{
    int i;
    
    printf("Akhil Hamal\n");

    // Using for loop
    printf("Even numbers using for loop:\n");
    for(i = 1; i <= 100; i ++) {
    	if(i%2==0){
		
        printf("%d ", i);
    	} //even
    }
	
	printf("\n\n");

    // Using while loop
    printf("Even numbers using while loop:\n");
    i = 1;
    while(i <= 100) {
    	if(i%2 == 0) {
			printf("%d ", i);
		}	
        i++;
    }

    printf("\n\n");

    // Using do...while loop
    printf("Even numbers using do...while loop:\n");
    i = 1;
    do {
    	if(i%2 == 0) {
        	printf("%d ", i);
		}
        i++;
    } while(i <= 100);

    printf("\n");

    return 0;
}
